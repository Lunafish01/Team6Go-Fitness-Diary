<h2 class="title is-4 container is-fluid">Edit Water Entry</h2>
<form class="field container is-fluid edit-water-form" id="new-water-entry" action="/edit_water" method="post">
     <div class="form-row">
         <label for="date" class="form-label subtitle is-5"><strong>Date:</strong></label>
        <input type="date" id="date" name="date" class="form-input form-control" value="{{water.date}}" />
    </div>
     <div class="form-row">
         <label class="form-label subtitle is-5" for="daily-goal"><strong>Daily Goal:</strong></label>
        <input id="daily-goal" name="daily-goal" class="form-input form-control" value="{{water.daily_goal}}" />
    </div>
     <div class="form-row">
         <label class="form-label subtitle is-5" for="actual-intake"><strong>Actual Intake:</strong></label>
        <input id="actual-intake" name="actual-intake" class="form-input form-control" value="{{water.actual_intake}}" />
    </div>

    <div class="field">
        <div class="control">
            <button type="submit" class="btn-water"><strong>Update Entry</strong></button>
        </div>
    </div>
</form>

