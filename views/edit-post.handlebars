<h2 class="card-header">Edit Post</h2>
<form class="card-body edit-post-form">
    <div class="field">
        <label for="post-title" class="label">Title</label>
        <div class="control">
            <input name="post-title" type="text" value="{{post.title}}" class="input" />
        </div>
    </div>

    <div class="field">
        <label class="label" for="content">Content</label>
        <div class="control">
            <input name="content" type="text" value="{{post.content}}" class="input" />
        </div>
    </div>

    <div class="field">
        <div class="control">
            <button type="submit" class="button is-primary">Update Post</button>
            <button type="button" class="button is-danger delete-post-btn">Delete Post</button>
        </div>
    </div>
</form>



<script src="/js/edit-entry.js"></script>
<script src="/js/delete-entry.js"></script>