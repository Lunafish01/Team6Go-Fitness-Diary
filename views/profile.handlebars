<section class="hero " id="profile-hero">
  <div class="hero-body">
    <h1 class="title1">My Profile</h1>
    <div class="level">
      <p class="level-item username">Username:  {{user.username}}</p>
      <p class="level-item email">Email:  {{user.email}}</p>
    </div>
  </div>
</section>

<section>
 <div class="section is-fluid" id="profile-container">
  <div class="level is-mobile"> <!-- Add is-mobile class for small screens -->
    {{! put steps, water, and food entry buttons here to take to matching handlebars  }}
    <div class="level-item">
      <button class="btn-food" type="submit"><a href="/food">Add Food Entry</a></button>
    </div>
    <div class="level-item">
      <button class="btn-steps" type="submit"><a href="/steps">Add Steps Entry</a></button>
    </div>
    <div class="level-item">
      <button class="btn-water" type="submit"><a href="/water">Add Water Entry</a></button>
    </div>
  </div>
</div>

  {{! To loop through entries for only logged in user }}
  <div class="data-2">
    <h2 >Steps Taken:</h2>
    <ul class="data-3">
      {{#each steps}}
        <li>Date:
          {{date}},<br> Steps:
          {{step_count}},<br> Calories Burned:
          {{calories_burned}},<br> Distance:
          {{distance_travelled}}<br><button class="button is-success dashbtn" id="edbtn" type="submit">
            <a href="/edit_steps/{{id}}">Edit</a>
          </button> <button class="button is-danger" id="edbtn" type="submit">
            <a href="/delete-steps">Delete</a>
          </button></li>
      {{/each}}
      
    </ul>

    {{! Display water entries }}
    <h2>Water Consumption:</h2>
    <ul class="data-3">
      {{#each water}}
        <li>Date:
          {{date}},<br> Daily Goal:
          {{daily_goal}} oz,<br> Water Consumed:
          {{actual_intake}} oz</li>
         <button class="button is-success dashbtn" id="edbtn" type="submit">
            <a href="/edit_water/{{id}}">Edit</a>
          </button> <button class="button is-danger" id="edbtn" type="submit">
            <a href="/delete-water">Delete</a>
          </button>
      {{/each}}
    </ul>

    {{! Display food entries }}
    <h2>Food Consumption:</h2>
    <ul class="data-3">
      {{#each food}}
        <li id="food-title">Food:
          {{food_name}},<br> Serving Size:
          {{serving_amount}},<br> Calories:
          {{calorie_count}} <br><button class="button is-success dashbtn" id="edbtn" type="submit">
            <a href="/edit_food/{{id}}">Edit</a>
          </button> <button class="button is-danger" id="edbtn" type="submit">
            <a href="/delete-entry">Delete</a>
          </button></li>
      {{/each}}
    </ul>
  </div>
</section>

