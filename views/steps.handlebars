<h2 class="title is-4 container is-fluid">Create New Steps Entry</h2>
<form class="field container is-fluid" id="new-steps-entry" action="/steps" method="POST">
    <div class="form-row">
        <label for="date" class="form-label subtitle is-5"><strong>Date:</strong></label>
        <input type="text" id="date" name="date" class="form-input form-control" />
    </div>
    <div class="form-row">
        <label class="form-label subtitle is-5" for="step-count"><strong>Step Count:</strong></label>
        <input id="step-count" name="step-count" class="form-input form-control" />
    </div>
    <div class="form-row">
        <label class="form-label subtitle is-5" for="calories-burned"><strong>Calories Burned:</strong></label>
        <input id="calories-burned" name="calories-burned" class="form-input form-control" />
    </div>
    <div class="form-row">
        <label class="form-label subtitle is-5" for="distance-travelled"><strong>Distance Travelled:</strong></label>
        <input id="distance-travelled" name="distance-travelled" class="form-input form-control" />
    </div>
    <div class="field">
        <p class="control">
            <button type="submit" class="btn-steps is-success"><strong>Post</strong></button>
        </p>
    </div>
</form>



