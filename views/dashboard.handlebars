<section>
{{#if loggedIn}}
    {{!-- Display steps --}}
    <h2 class="dashtitles">Steps Taken:</h2>
    <ul >
      {{#each steps}}
      <div></div>
        <li class=" dasdiv" id="data" >Username: {{user.username}}, <br> Date: {{date}},<br> Steps: {{step_count}},<br> Calories Burned: {{calories_burned}},<br> Distance: {{distance_travelled}} miles <button class="button is-success dashbtn" id="edbtn" type="submit">
            <a href="/edit-steps">Edit</a>
          </button> <button class="button is-danger" id="edbtn" type="submit">
            <a href="/delete-steps">Delete</a>
          </button></li>
      </div>
      {{/each}}
    </ul>

    {{!-- Display water entries --}}
    <h2 class="dashtitles">Water Consumption:</h2>
    <ul>
      {{#each water}}
        <li class="dasdiv" id="data">Username: {{user.username}},<br> Date: {{date}},<br> Daily Goal: {{daily_goal}},<br> Water Consumed: {{actual_intake}} oz <button class=" button is-success dashbtn" id="edbtn" type="submit">
            <a href="/edit-water"> Edit</a>
          </button> <button class=" button is-danger" id="edbtn" type="submit">
            <a href="/delete-water">Delete</a>
          </button></li>
      {{/each}}
    </ul>

    {{!-- Display food entries --}}
    <h2 class="dashtitles">Food Consumption:</h2>
    <ul >
      {{#each food}}
        <li class="dasdiv" id="data">Username: {{user.username}},<br> Food: {{food_name}},<br> Serving Size: {{serving_amount}},<br> Calories: {{calorie_count}} <button class=" button is-success dashbtn" id="edbtn" type="submit">
           <a href="/edit-food">Edit</a> 
          </button> <button class=" button is-danger" id="edbtn" type="submit">
            <a href="/delete-food">Delete</a> 
          </button></li>
      {{/each}}
    </ul>
  {{else}}
    <p>You are not logged in.</p>
  {{/if}}

</section>

