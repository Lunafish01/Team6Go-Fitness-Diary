<section class="columns">
  {{#if loggedIn}}
    {{! Display steps }}

    <ul class="container">
      <h2 class="dashtitles title is-4" id="dashsteps">Steps Taken</h2>
      {{#each steps}}

        <li class="column" id="data">Username:
          {{user.username}},
          <br />
          Date:
          {{date}},<br />
          Steps:
          {{step_count}},<br />
          Calories Burned:
          {{calories_burned}},<br />
          Distance:
          {{distance_travelled}}
          miles</li>

      {{/each}}
    </ul>

    {{! Display water entries }}
    <ul class="container">
      <a class="dashtitles title is-4" id="dashwater">Water Consumption</a>

      {{#each water}}
        <li class="dasdiv column" id="data">Username:
          {{user.username}},<br />
          Date:
          {{date}},<br />
          Daily Goal:
          {{daily_goal}},<br />
          Water Consumed:
          {{actual_intake}}
          oz</li>
      {{/each}}
    </ul>

    {{! Display food entries }}

    <ul class="container">
      <h2 class="dashtitles title is-4">Food Consumption</h2>
      {{#each food}}
        <li class="dasdiv column" id="data">Username:
          {{user.username}},<br />
          Food:
          {{food_name}},<br />
          Serving Size:
          {{serving_amount}},<br />
          Calories:
          {{calorie_count}}</li>
      {{/each}}
    </ul>
  {{else}}
    <p>You are not logged in.</p>
  {{/if}}

</section>

